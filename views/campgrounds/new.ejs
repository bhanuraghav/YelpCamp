<% include ../partials/header %>
<div class="container">
		
		<h1 style="text-align: center;">Create New CampGround</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
			  <div class="form-group">
			    <label >Name</label>
			    <input type="text" class="form-control"  placeholder="Enter CampGround Name" name="name" required=true>
			  </div>
			  <div class="form-group">
			    <label >Price</label>
			    <input type="text" class="form-control"  placeholder="Enter Price" name="price" min="0.01" step="0.01" required=true>
			  </div>
			  <div class="form-group">
			    <label >Image Url</label>
			    <input type="text" class="form-control" name="image"  placeholder="Image Url" required=true>
			  </div>
			  <div class="form-group">
			    <label >Description</label>
			    <input type="text" class="form-control" name="description"  placeholder="Description" required=true>
			  </div>
			 
			  <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds">Go Back</a>

		</div>
	
</div> 


<% include ../partials/footer %>
