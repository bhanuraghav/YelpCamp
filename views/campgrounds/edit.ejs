<% include ../partials/header %>
<div class="container">
		
		<h1 style="text-align: center;">Edit <%=campground.name%></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
			  <div class="form-group ">
			    <label >Name</label>
			    <input type="text" class="form-control"  value="<%=campground.name%>" name="campground[name]" required=true>
			  </div>
			  <div class="form-group">
			    <label >Price</label>
			    <input type="text" class="form-control"  value="<%= campground.price%>"  name="campground[price]" min="0.01" step="0.01" required=true>
			  </div>
			  <div class="form-group">
			    <label >Image Url</label>
			    <input type="text" class="form-control" name="campground[image]"  value="<%=campground.image%>" required=true>
			  </div>
			  <div class="form-group">
			    <label >Description</label>
			    <input type="text" class="form-control" name="campground[description]"  value="<%=campground.description%>" required=true>
			  </div>
			 
			  <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds">Go Back</a>

		</div>
	
</div> 


<% include ../partials/footer %>
